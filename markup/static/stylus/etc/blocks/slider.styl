.slider
  position relative
  
.slider__slide-img-wrap
  position absolute
  left 125px
  bottom 35px

.slider__text
  position relative
  &::after
    content ''
    
    position absolute
    left 0
    right 0
    bottom -8px
    
    margin auto
    
    border 1px dashed #bebebe

.slider__controls-bar
  position relative
  
  height 6px
  margin 0 25px
  
  background-color #dcdcdc
  
  border-radius 15px
  
.slider__controls-control
  reset-button()
  center-absolute()
  
  box-sizing border-box
  width 34px
  height 34px
  
  background-color white
  box-shadow 0px 0px 10px -2px rgba(000, 000, 000, 0.75)
  
  border 2px solid transparent
  border-radius 50%
  
  cursor pointer
  
  transition 0.2s ease
  &::before
    center-absolute()
    
    content ''
    
    width 8px
    height 8px
    
    background-color green
    
    border-radius 50%
  &:hover
    box-shadow 0px 2px 10px -2px rgba(000 ,000 ,000 ,0.75)
  &:active
    box-shadow 0px 4px 10px -2px rgba(000 ,000 ,000 ,0.75)
    
    border-color green
  &:focus
    outline 2px solid green