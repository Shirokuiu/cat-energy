.catalog__cart
  position relative
  
  box-sizing border-box
  height 430px
  margin-right 80px
  margin-bottom 140px
  padding 0 35px
  padding-bottom 40px
  
  background-color grayLight
  &:nth-child(4n)
    margin-right 0
  &:nth-last-child(-n+4)
    margin-bottom 0
  &--add
    background-color transparent

    border 1px solid #e7e7e7
    .catalog__cart-link
      &:hover
        background-color #e5e5e5
      &:active
        color rgba(000, 000, 000, 0.3) 
  
.catalog__cart-img-wrap
  position absolute
  top -45px
  left 0
  right 0
  
  width 161px
  height 172px
  margin auto
  &--big
    top -75px
    
    width 195px
    height 208px
    
.catalog__cart-img-wrap
  position absolute
  top -45px
  left 0
  right 0
  
  width 161px
  height 172px
  margin auto
  &--big
    top -75px
    
    width 195px
    height 208px
  
.catalog__cart-description
  margin-bottom 8px
  padding-bottom 8px
  
  border-bottom 1px solid #cdcdcd
  &:last-child
    margin-bottom 0
  
.catalog__cart-description-text
  font-family 'Arial', sans-serif
  color #7c7c7c
  
.catalog__cart-link
  transition 0.2s ease
  &:hover
    background-color #5eaa2f
  &:active
    color rgba(255, 255, 255, 0.3)
    
.catalog__cart-add-icon
  position absolute
  top 55px
  left 0
  right 0
  
  display block
  width 60px
  height 60px
  margin auto
  &::before,
  &::after
    center-absolute()
    
    content ''
    
    width 60px
    height 2px
    
    background-color #e8e8e8
  &::before
    transform rotate(90deg)
    
.catalog__additional-border
  height 3px
  
  background-color green
  
.catalog__additional-headline
  &::before,
  &::after
    content ''
    
    display inline-block
    vertical-align middle
    width 100%
    height 3px
    
    background-color green
  &::before
    margin-left -100%
    margin-right 40px
  &::after
    margin-left 40px
    margin-right -100%
    
.catalog__additional-description
  border 1px solid #cdcdcd
  border-left none
  border-right none
  
.catalog__additional-description-items
  padding 15px 0
  
  border-bottom 1px solid #cdcdcd
  &:last-child
    border-bottom none
    
.catalog__additional-description-link
  transition 0.2s ease
  &:hover
    background-color #5eaa2f
  &:active
    color rgba(255, 255, 255, 0.3)
    
.catalog__additional-link
  box-sizing border-box
  height 289px
  padding 0 40px
  
  text-decoration none
  
  background-image url('%=static=%content/additional-bg.jpg')
  background-repeat no-repeat
  background-size 245px 289px
  
  transition 0.2s ease
  &:hover
    opacity 0.9
  
.catalog__additional-link-icon
  width 55px
  height 60px
  .present
    width 55px
    height 60px
    
    fill white