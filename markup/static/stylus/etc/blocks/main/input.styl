.input
  reset-input()
  
  border 1px solid grayMedium
  &:focus
    outline none
  &--text
    padding 15px 20px
    
    transition 0.2s ease
    &:hover
      border-color #cdcdcd
    &:focus
      border-color grayDark
  &--error
    border-color #ff8282
  &--checkbox,
  &--radio
    width 40px
    height 40px
    
    display flex
    justify-content center
    align-items center
    &:focus
      outline 1px solid grayDark
  &--radio
    border-radius 50%