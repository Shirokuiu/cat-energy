doctype html
html(class="no-js", lang="ru")
  include ../components/head/head.pug
  head
    +head(head.defaults)
  body.page
    |%=symbols=%

    .wrapper
      .content
        header.page-header.column.m--b80
          .container.grow.column.column--jc-sb
            .row.row--jc-sb.row--ai-c
              .logo
                a.logo__link.d-block(href="#" tabindex="0")
                  img(src="%=static=%img/content/logo.svg" width="202" height="59" alt="Логотип кэтэнерджи")
              nav.main-nav
                ul.main-nav__list.list.row.row--jc-sb.b--w485
                  li.main-nav__items
                    a.main-nav__link.main-nav__link--active.b-block.text.text--white20.text--uppercase(href="index.html" tabindex="0") Главная
                  li.main-nav__items
                    a.main-nav__link.b-block.text.text--white20.text--uppercase(href="catalog.html" tabindex="0") Каталог продукции
                  li.main-nav__items
                    a.main-nav__link.b-block.text.text--white20.text--uppercase(href="form.html" tabindex="0") Подбор программы
        main.page-content
        
          .about
            .about__map
              <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A0d6f752ed801d67fc66fe3f3018b76b7757f967e70ab5c1ce6dd8da141f681b6&amp;width=100%25&amp;height=100%&amp;lang=ru_RU&amp;scroll=true"></script>
            .about__content.column
              .container.grow.column.column--jc-c
                .about__content-description.column.column--jc-c.column--ai-c
                  .row
                    .b--w160.m--r80
                      h2.text.text--black20.text--fw400.text--uppercase Приглашаем к сотрудничеству дилеров!
                    .b
                      p.about__content-text.text.text--greyDark16.m--b20 ул. Большая
                        br
                        | Конюшенная, д. 19/8 
                      p.about__content-text.text.text--greyDark16 Санкт-Петербург
        
      footer.page-footer
        .footer-content
          .container.row.row--jc-sb.row--ai-c
            .logo
              a.logo__link.logo__link--footer.d-block(href="#" tabindex="0")
                img(src="%=static=%img/content/logo-footer.svg" width="128" height="24" alt="Логотип кэтэнерджи")
            ul.socials.list.row.row--ai-c
              li.socials__items
                a.socials__link.socials__link--vk.d-block(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'vk', className: 'vk'})
              li.socials__items
                a.socials__link.socials__link--inst.d-block(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'inst', className: 'inst'})
              li.socials__items
                a.socials__link.socials__link--fb.d-block(href="#")
                  != pugHelpers.Icon.call(locals, {iconName: 'fb', className: 'fb'})
            .footer-content__copyright
              a.footer-content__copyright-link.text.d-block.text.text--greyDark16(href="https://htmlacademy.ru/intensive/adaptive") HTML Academy
                span.footer-content__copyright-link-academy-icon.d-block
                  != pugHelpers.Icon.call(locals, {iconName: 'academy', className: 'academy'})

    script(src='%=static=%js/separate-js/svg4everybody.min.js')
    script svg4everybody();

    //- Main scripts. You can replace it, but I recommend you to leave it here
    script(src='%=static=%js/main%=hash=%%=min=%.js')
